<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGreen"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="65dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0"
                android:background="@color/colorClick" />

            <TextView
                android:id="@+id/changeName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:onClick="onChangeName"
                android:text="@string/change_name"
                android:textColor="@color/colorIcon"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/btnChangeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:onClick="onChangeName"
                android:rotation="270"
                android:tint="@color/colorClick"
                app:srcCompat="@drawable/quantum_ic_keyboard_arrow_down_white_36" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0"
                android:background="@color/colorClick" />

            <TextView
                android:id="@+id/changeMembership"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:onClick="onChangeMembership"
                android:text="@string/change_membership"
                android:textColor="@color/colorIcon"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/btnChangeMembership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:onClick="onChangeMembership"
                android:rotation="270"
                android:tint="@color/colorClick"
                app:srcCompat="@drawable/quantum_ic_keyboard_arrow_down_white_36" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0"
                android:background="@color/colorClick" />

            <TextView
                android:id="@+id/changePassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:onClick="onChange"
                android:text="@string/change_password"
                android:textColor="@color/colorIcon"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/btnChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:onClick="onChange"
                android:rotation="270"
                android:tint="@color/colorClick"
                app:srcCompat="@drawable/quantum_ic_keyboard_arrow_down_white_36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.82"
            android:orientation="horizontal">


            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0"
                android:background="@color/colorClick" />

            <TextView
                android:id="@+id/deleteHistory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/delete"
                android:textColor="@color/colorIcon"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/btndelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:background="@null"
                android:onClick="onClick"
                android:rotation="270"
                android:tint="@color/colorClick"
                app:srcCompat="@drawable/quantum_ic_keyboard_arrow_down_white_36" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/sign_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0"
                android:background="@color/colorClick" />

            <TextView
                android:id="@+id/sign_out_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:onClick="onSignOut"
                android:text="@string/sign_out"
                android:textColor="@color/colorIcon"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/btnSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:background="@null"
                android:onClick="onSignOut"
                android:rotation="270"
                android:tint="@color/colorClick"
                app:srcCompat="@drawable/quantum_ic_keyboard_arrow_down_white_36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">


            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0"
                android:background="@color/colorClick" />

            <TextView
                android:id="@+id/shareName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:onClick="onShare"
                android:text="@string/share"
                android:textColor="@color/colorIcon"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:background="@null"
                android:onClick="onShare"
                android:rotation="0"
                android:tint="@color/colorClick"
                app:srcCompat="@android:drawable/ic_menu_share" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/darkGreen2"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btnBack"
                style="@android:style/Widget.Holo.Light.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.06"
                android:background="@null"
                android:onClick="onBack"
                android:padding="7dp"
                android:rotation="90"
                android:tint="@color/colorClick"
                android:visibility="visible"
                app:srcCompat="@drawable/quantum_ic_keyboard_arrow_down_white_36" />


            <TextView
                android:id="@+id/titleText"
                android:layout_width="292dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginLeft="10sp"
                android:padding="10dp"
                android:text="@null"
                android:textAlignment="textStart"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                tools:text="TextView" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>